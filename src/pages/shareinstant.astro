---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
---

<MainLayout>
  <main>
    <Heading
      Htmlheading="h1"
      size="large"
      font="paytoneone"
      class="w-full text-4xl md:text-6xl color-primary-400 mb-8 text-center"
    >
      SHARE YOUR INSTANT
    </Heading>

    <!-- Hero sektion -->
    <section class="w-full">
      <div>
        <img
          src="/img/herobillede.png"
          alt="Hero billede"
          class="w-full h-[80vh] object-cover"
        />
      </div>
    </section>

    <h2>
      Got an instant photo ready for the public? In order to take part in
      Instant Day:
    </h2>

    <section class="w-full py-12">
      <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Info 1 -->
        <div class="grid text-center p-4">
          <img src="/img/infografik1.png" alt="Step 1" class="w-40 h-40 mb-4" />
          <p class="text-lg">
            Take a photo of your instant with your smartphone (or scan it for
            max. quality) – the file should be between 2 – 10 MB, in jpg/jpeg or
            webp format.
          </p>
        </div>

        <!-- Info 2 -->
        <div class="grid text-center p-4">
          <img src="/img/infografik2.png" alt="Step 2" class="w-40 h-40 mb-4" />
          <p class="text-lg">
            Upload your photo and credentials on [link til din “share your
            instants” side].
          </p>
        </div>

        <!-- Info 3 -->
        <div class="grid text-center p-4">
          <img src="/img/infografik3.png" alt="Step 3" class="w-40 h-40 mb-4" />
          <p class="text-lg">
            Participants have to be 18+, portrayed persons must have given
            consent, and you agree that your instant can be exhibited and used
            to promote the photo contest.
          </p>
        </div>

        <!-- Info 4 -->
        <div class="grid text-center p-4">
          <img src="/img/infografik4.png" alt="Step 4" class="w-40 h-40 mb-4" />
          <p class="text-lg">
            You can make up to 5 submissions – go through step 1–3 for each
            submission ;-)
          </p>
        </div>
      </div>
    </section>
    <form class="max-w-lg mx-auto space-y-6" action="#" method="POST">
      <!-- Overskrift -->
      <div>
        <h2 class="text-4xl font-bold font-paytoneone">
          Share your instant here!
        </h2>
        <p class="text-gray-700">Please fill in the form to participate</p>
      </div>

      <!-- Navn -->
      <div>
        <label for="name" class="block mb-1 font-medium">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Full name"
          required
          class="w-full border-2 border-[var(--color-primary-500)] rounded-md px-3 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-500)]"
        />
      </div>

      <!-- Email + Titel i grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label for="email" class="block mb-1 font-medium">Email Adresse</label
          >
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email Adresse"
            required
            class="w-full border-2 border-[var(--color-primary-500)] rounded-md px-3 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-500)]"
          />
        </div>
        <div>
          <label for="title" class="block mb-1 font-medium"
            >Submission title</label
          >
          <input
            type="text"
            id="title"
            name="title"
            placeholder="Submission title"
            required
            class="w-full border-2 border-[var(--color-primary-500)] rounded-md px-3 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-500)]"
          />
        </div>
      </div>

      <!-- File upload -->
      <div>
        <label for="file" class="block mb-1 font-medium">Upload a File</label>
        <input
          type="file"
          id="file"
          name="file"
          required
          class="w-full border-2 border-[var(--color-primary-500)] rounded-md px-3 py-10 text-center text-gray-400 file:hidden"
        />
      </div>

      <!-- Beskrivelse -->
      <div>
        <label for="description" class="block mb-1 font-medium"
          >Describe the image and how you took it in a sentence or two</label
        >
        <textarea
          id="description"
          name="description"
          placeholder="Describe the image and how you took it in a sentence or two"
          rows="4"
          required
          class="w-full border-2 border-[var(--color-primary-500)] rounded-md px-3 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-500)]"
        ></textarea>
      </div>

      <!-- Checkbox -->
      <div class="flex items-center">
        <input
          type="checkbox"
          id="terms"
          name="terms"
          required
          class="h-4 w-4 text-[var(--color-primary-500)] border-2 border-[var(--color-primary-500)] rounded focus:ring-[var(--color-primary-500)]"
        />
        <label for="terms" class="ml-2 text-sm">
          I have read and agree to
          <a href="#" class="underline text-[var(--color-primary-500)]"
            >the terms and conditions</a
          >
        </label>
      </div>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full border-2 border-[var(--color-primary-500)] rounded-md py-3 font-medium text-gray-700 hover:bg-red-50"
      >
        Submit!
      </button>
    </form>
  </main>
</MainLayout>
