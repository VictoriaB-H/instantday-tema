---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import Heading from "../components/Heading.astro";
---

<MainLayout title="Titel">
  <main>
    <div class="mx-auto max-w-screen-xl">
      <Heading
        htmlheading="h1"
        size="large"
        font="paytoneone"
        stylingclasses="w-full text-4xl md:text-6xl color-primary-400 text-center"
      >
        INSTANT DAY
      </Heading>
      <p class="text-center mb-5 mt-3 text-xl">
        CELEBRATE INSTANT DAY ON OCT. 18
      </p>
    </div>

    <!-- Herosektionen -->
    <section class="relative w-full">
      <!-- Hero-billede -->
      <img
        src="/img/herobillede.png"
        alt="Hero billede"
        class="w-full h-[35vh] sm:h-[45vh] md:h-[60vh] object-cover"
      />

      <!-- Overlay-billede -->
      <img
        src="/img/03-amager-strand.jpg"
        alt="Overlay billede"
        class="absolute top-10 sm:top-16 md:top-20 left-1/2 transform -translate-x-1/2
           w-[200px] sm:w-[230px] md:w-[300px] h-auto z-20"
      />

      <!-- Knap ovenpå -->
      <div
        class="absolute left-1/2 transform -translate-x-1/2 z-30
           top-55 sm:top-69 md:top-91"
      >
        <Button href="/shareinstant/">JOIN THE COMPETITION</Button>
      </div>
    </section>

    <a
      href="#next-section"
      class="absolute left-1/2 -translate-x-1/2 z-10 mt-5 animate-bounce text-[var(--color-primary-500)]"
    >
      <svg
        class="w-8 h-8"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <path d="M6 9l6 6 6-6"></path>
      </svg>
    </a>
  </main>

  <!-- Sektion man scroller ned til -->
  <section id="next-section" class="py-20 text-center">
    <h2 class="text-3xl font-bold">Next Section</h2>
    <p class="mt-4 text-lg">Her kommer indholdet under hero.</p>
  </section>

  <section class="relative w-full py-12">
    <div class="mx-auto max-w-screen-xl px-4 md:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
        <div>
          <h2 class="text-4xl md:text-5xl font-paytoneone mb-6">
            How To Participate
          </h2>
          <p class="text-[var(--color-primary-500)] font-semibold mb-4">
            Join Instant Day!
          </p>
          <p class="mb-4">Got an instant photo? Here's how:</p>
          <ol class="list-decimal list-inside space-y-2 mb-4">
            <li>Snap or scan your instant (2-10 MB, jpg/jpeg or webp).</li>
            <li>Upload your photo and details on [link].</li>
            <li>
              Accept the terms: you must be 18+, people in the photo must
              consent, and your instant may be shown or used to promote the
              contest.
            </li>
          </ol>
          <p class="mb-6">
            You can submit up to 5 photos – just repeat steps 1–3.
          </p>

          <Button href="/shareinstant" variant="outline" size="lg">
            Join The Competition
          </Button>
        </div>

        <!-- Billedkolonne -->
        <div class="relative w-full">
          <img
            src="/img/16-vejlands-alle-panorama-2.jpg"
            alt="How to participate"
            class="w-full h-[60vh] object-cover object-top md:max-w-[100%] md:ml-auto"
          />
        </div>
      </div>
    </div>
  </section>
</MainLayout>
