---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header x-data="{ showmenu: false }">
  <div id="navbar" class="container mx-auto p-4 flex flex-row items-center">
    <div id="logo" class="flex-shrink-0">
      <a href="/">
        <img src="/public/img/icon.png" alt="icon" class="md:h-10 mt-2" />
      </a>
    </div>

    <div
      class="flex-1 text-center font-semibold text-lg text-[var(--color-primary-500)]"
    >
      18 October 2025
    </div>

    <nav id="desktopmenu" class="hidden lg:block flex-shrink-0">
      <ul class="flex flex-row gap-4">
        <li>
          <a
            href="/shareinstant/"
            class={`transition-colors duration-300 ${
              currentPath === "shareinstant/"
                ? "font-bold text-[var(--color-primary-500)]"
                : "hover:text-[var(--color-secondary-500)]"
            }`}
          >
            Share Your Instant
          </a>
        </li>
        <li>
          <a
            href="/categories/"
            class={`transition-colors duration-300 ${
              currentPath === "categories/"
                ? "font-bold text-[var(--color-primary-500)]"
                : "hover:text-[var(--color-secondary-500)]"
            }`}
          >
            Categories
          </a>
        </li>
        <li>
          <a
            href="/aboutus/"
            class={`transition-colors duration-300 ${
              currentPath === "aboutus/"
                ? "font-bold text-[var(--color-primary-500)]"
                : "hover:text-[var(--color-secondary-500)]"
            }`}
          >
            About
          </a>
        </li>
      </ul>
    </nav>

    <!-- Burgermenu -->
    <button
      id="burgermenu"
      class="lg:hidden text-3xl p-2"
      x-on:click="showmenu = !showmenu"
    >
      â˜°
    </button>
  </div>

  <nav
    x-show="showmenu"
    x-transition
    class="lg:hidden bg-white border-t-2 border-[var(--color-primary-500)]"
  >
    <ul class="flex flex-col p-4 space-y-4">
      <li>
        <a
          href="/shareinstant/"
          class={`block transition-colors duration-300 ${
            currentPath === "shareinstant/"
              ? "font-bold text-[var(--color-secondary-500)]"
              : "hover:text-[var(--color-secondary-500)]"
          }`}
        >
          Share Your Instant
        </a>
      </li>
      <li>
        <a
          href="/categories/"
          class={`block transition-colors duration-300 ${
            currentPath === "categories/"
              ? "font-bold text-[var(--color-secondary-500)]"
              : "hover:text-[var(--color-secondary-500)]"
          }`}
        >
          Categories
        </a>
      </li>
      <li>
        <a
          href="/aboutus/"
          class={`block transition-colors duration-300 ${
            currentPath === "aboutus/"
              ? "font-bold text-[var(--color-secondary-500)]"
              : "hover:text-[var(--color-secondary-500)]"
          }`}
        >
          About
        </a>
      </li>
    </ul>
  </nav>
</header>
