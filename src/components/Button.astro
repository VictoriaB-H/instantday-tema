---
const { variant = "red", href } = Astro.props;

const buttonstyling =
  // Default (mobile): lille skrift men stadig plads til teksten
  "my-2 mt-0 border-solid border-2 px-1 py-2 text-sm whitespace-nowrap w-auto " +
  // Tablet (md): lidt større
  "md:my-4 md:px-5 md:py-2 md:text-base " +
  // Desktop (lg): størst
  "lg:my-5 lg:border-3 lg:px-6 lg:py-3 lg:text-lg " +
  "rounded-2xl font-semibold inline-block";

const variantClasses = {
  red: "border-red text-red hover:bg-red hover:text-white",
  green: "border-green text-green hover:bg-green hover:text-white",
  blue: "border-blue text-blue hover:bg-blue hover:text-white",
  yellow: "border-yellow text-yellow hover:bg-yellow hover:text-white",
};
---

{
  href ? (
    <a href={href} class={`${buttonstyling} ${variantClasses[variant] || ""}`}>
      <slot />
    </a>
  ) : (
    <button class={`${buttonstyling} ${variantClasses[variant] || ""}`}>
      <slot />
    </button>
  )
}
